

.login-box
    margin 0 auto
    padding 60px 0
    text-align center
    width 350px

    @media ( max-width 400px )
        padding 60px 20px
        width 100%

    > .social
        border-top 1px solid lightGrey
        margin-top 30px
        display flex
        justify-content space-between
        padding-top 20px
        width 100%

        > .item
            border-radius 8px
            cursor pointer
            height 40px
            display flex
            justify-content center
            align-items center
            width 45%
            
            &.-fb
                background #3b5998

            &.-gg
                background #dd4b39
            
            > svg 
                height 25px
                width 25px


    > .register
        color greyish
        display inline-block
        margin-top 20px
        font 300 14px 'Museo'
        width 100%

        > strong
            color purplishGrey

        &:hover
            text-decoration underline
